{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			// common
			"@context": ["src/common/context/_exports"],

			// modules
			"@auth": ["src/modules/auth/_exports"],
			"@chat": ["src/modules/chat/_exports"],
		}
	},
	"include": ["src"],
	"references": [
		{ 
			"path": "./tsconfig.node.json" 
		}
	]
}
